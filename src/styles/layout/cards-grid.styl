#app
.cards
	width 100%
	height 100%	

#app
	position: relative;
	min-width 980px
	min-height 735px
	
.cards
	position absolute
	top 55px

.card
.step-form-controller-wrapper
	position relative
	float left
	width 19%
	height 19%
	margin 0 0.5% 1% 0.5%
	background none
	border 0px solid transparent
	border-radius: 2px
	z-index 1

.card
	transition transform 0.5s
	transition box-shadow 0.5s
	text-align center

	&.is-fliping
		z-index 10
		&:before
			background rgba(0,0,0,0) !important
	&.is-fliping .js-lock-config-button
		display none
	&.is-fliping &-perspective-inner-wrapper:before
		background none !important
	&.fliped &-perspective-inner-wrapper
		box-shadow 0 0 1px 1px #000, -3px 5px 5px 0 rgba(0,0,0,0.4)
		transform rotateY( 180deg ) 


