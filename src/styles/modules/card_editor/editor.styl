.panel
	transition: all .3s ease
	max-height: 354px
	overflow: hidden
	ul 
		// height : 6 items
		max-height: 246px
		overflow: scroll
	
	&.is-collapsed
		max-height: 42px

colLeftWidth = 250px
colRightWidth = 360px

.col-left
	width colLeftWidth

.col-center
	position absolute
	padding 0 colRightWidth 0 colLeftWidth
	width 100%
	top 0
	left 0

	#canvas-container
		background rgba(0,0,0,0.1)

.col-right
	width colRightWidth
	float right