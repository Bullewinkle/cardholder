$cardTransition = 3.4s

#cardsGreed
	width 100%
	position relative
	height 0
	padding 2.25% 0 54% 0

	&.prepare-to-pdf
		width 291.17mm
		height 442.98mm

		.card
			width 94
			height 54

		.step-form-controller-wrapper
			display none

.cards
	position absolute
	top 0
	left 0
	width 100%
	height 100%	

.card
.step-form-controller-wrapper
	width 19.4%
	height 19.4%
	margin 0 0.3% 0.6% 0.3%
	border 0px solid transparent
	border-radius: 2px
	z-index 1


.card
	position relative
	float left
	background none
	transition transform 0.5s
	transition box-shadow 0.5s
	text-align center

	&.is-fliping
		z-index 10
		&:before
			background rgba(0,0,0,0) !important
	&.is-fliping .js-lock-config-button
		display none
	&.is-fliping &-perspective-inner-wrapper:before
		background none !important
	&.fliped &-perspective-inner-wrapper
		box-shadow -2px 3px 3px 0 rgba(0,0,0,0.4)
		transform rotateY( 180deg ) 

	&:nth-child(13)
		margin 0 20.3% 0 0.3%

	&:hover:before
	&.is-locked:before
		background rgba(0,0,0,0.8)
	&:before
		content ""
		position absolute
		width 100.2%
		height 100%
		left 0
		top 0
		background rgba(0,0,0,0.0)
		transition all .3s ease
		z-index 10
	&-perspective
		width 100%
		height 100%
		perspective 680px
		&-inner-wrapper
			position absolute
			width 100%
			height 100%

			top 0
			left 0
			transform-style preserve-3d
			box-shadow 2px 3px 3px 0px rgba(0,0,0,0.4)
			transition all $cardTransition
			border-radius 2px
			z-index 1

			& .front
				background #fff
			& .back
				background #fff
				transform rotateY( 180deg ) 
	
.step-form-controller
	
	&-wrapper
		position absolute
		top 40.8%
		left 40%
		z-index 10
		background white
		transition all .3s ease
		overflow hidden
		box-shadow 0px 0px 0px 1px rgba(0,0,0,0.2) inset, 0px 6px 4px -4px rgba(0,0,0,0.4) inset,  0 0 7px 2px rgba(0,0,0,0.4) inset

	position absolute
	margin auto
	top 0
	bottom 0
	right 0
	left 0
	width 90%
	height 86%
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none
	-ms-user-select: none
	user-select: none


	&-form
		width 100%
		height 100%
		float left

		&-input
			position absolute
			top 40px
			left 0
			height 1.7em
			width 100%
			background 0 0
			line-height 1.1em
			font-size 1em
			padding 0

		&-label
			position absolute
			top 2px
			left 0
		&-statusbar
			position absolute
			top 70px
			width 100%
			height 30px
			overflow hidden
			border-top: 1px solid
			&-value
				position absolute
				top 0
				left 0
				width 0%
				height 3px
				background #090
				transition width .2s ease

			&-step
				position: absolute
				bottom: 3px
				width: 100%
				text-align: center

		&-controls
			position absolute
			bottom 0
			left 0
			width 100%
			font-size 25px
		step-form-controller-form-control
		&-control
			width 25px
			height 25px
			cursor pointer
			hover-color red
			&.prev
				float left
				margin-left: 1px
				position relative
			&.next
				float right
				margin-right: 1px
				position relative

		&-submit
			position absolute
			top 43px
			right 3px
			width 20px
			height 20px
			background none
			z-index 100
			cursor pointer
			font-size: 20px;
			hover-color red

.card-canvas
.card-svg
	display block
	transition none
	width 100%
	height 100%
	position absolute
	top 0
	left 0
	z-index 1
	border-radius 3px
	border 1px solid rgba(0,0,0,0.5)
	backface-visibility hidden
	overflow hidden

.js-lock-config-button
	&-wrapper
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		z-index	20

	position absolute
	top 1px
	left 1px
	right 0
	bottom 0
	height 46px
	z-index 99
	border 0 solid #fff
	border-radius 2px
	padding 2px
	display block
	box-shadow 0 0 0 2px rgba(255,255,255,1) inset
	width 116px
	margin auto
	background none
	color #fff
	font-weight 500
	text-transform uppercase
	line-height 2.6em
	font-size 0.9em
	text-shadow 1px 1px 16px #fff
	overflow hidden
	&:before
		z-index -1
		content ''
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background #fff
		transition all .2s ease
		transform translate(-100%,0)

.is-locked .js-lock-config-button
	color #000
	text-shadow 1px 1px 3px rgba(0,0,0,0.4)
	&:before
		transform translate(0,0)